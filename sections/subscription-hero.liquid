        {
            "type": "text",
            "id": "subheading",
            "label": "サブ見出し",
            "default": "SUBSCRIPTION"
        },
        {
            "type": "range",
            "id": "title_padding_top",
            "label": "タイトルの上余白",
            "min": 0,
            "max": 120,
            "step": 5,
            "unit": "px",
            "default": 20
        },
        {
            "type": "range",
            "id": "title_padding_bottom",
            "label": "タイトルの下余白",
            "min": 0,
            "max": 120,
            "step": 5,
            "unit": "px",
            "default": 20
        },
        {
            "type": "text",
            "id": "subtitle",
            "label": "サブタイトル",
            "default": "毎月届く、小さな季節の贈りもの"
        },
        {
            "type": "richtext",
            "id": "body",
            "label": "本文",
