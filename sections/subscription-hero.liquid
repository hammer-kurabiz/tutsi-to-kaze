        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "右側の画像"
        },
        {
            "type": "text",
            "id": "primary_label",
            "label": "ボタン1のラベル",
            "default": "マイページ"
        },
        {
            "type": "url",
            "id": "primary_link",
            "label": "ボタン1のリンク"
        },
        {
            "type": "text",
            "id": "secondary_label",
            "label": "ボタン2のラベル",
            "default": "過去のお届け品"
        },
        {
            "type": "url",
            "id": "secondary_link",
            "label": "ボタン2のリンク"
        },
        {
            "type": "range",
            "id": "padding_top_desktop",
            "label": "上の余白（PC）",
            "min": 0,
            "max": 240,
            "step": 10,
            "unit": "px",
            "default": 120
        },
        {
            "type": "range",
            "id": "padding_bottom_desktop",
            "label": "下の余白（PC）",
            "min": 0,
            "max": 240,
            "step": 10,
            "unit": "px",
            "default": 120
        },
        {
            "type": "range",
            "id": "padding_top_mobile",
            "label": "上の余白（スマホ）",
            "min": 0,
            "max": 200,
            "step": 10,
            "unit": "px",
            "default": 80
        },
        {
            "type": "range",
            "id": "padding_bottom_mobile",
            "label": "下の余白（スマホ）",
            "min": 0,
            "max": 200,
            "step": 10,
            "unit": "px",
            "default": 80
        }
    ],
    "presets": [
        {
            "name": "【カスタム】サブスクリプションヒーロー"
        }
    ]
}
{% endschema %}
