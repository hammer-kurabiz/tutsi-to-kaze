{%- style -%}
    #shopify-section-{{ section.id }} .media-parallax-section {
        --section-height-desktop: {{ section.settings.section_height }}vh;
        --section-height-mobile: {{ section.settings.section_height_mobile }}vh;
    }
    #shopify-section-{{ section.id }} .media-parallax-section__media::after {
        --overlay-color-rgb: {{ section.settings.overlay_color.rgb }};
        --overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    }
{%- endstyle -%}

<media-parallax-section>
    <div
        class="media-parallax-section"
        style="--section-height: {{ section.settings.section_height }}vh;"
    >
        <div class="media-parallax-section__media">
            {%- if section.settings.media_type == 'image' -%}
                <picture>
                    {%- if section.settings.image_mobile != blank -%}
                        <source
                        media="(max-width: 749px)"
                        srcset="{{ section.settings.image_mobile | image_url: width: 1200 }}"
                        >
                    {%- endif -%}
                    {%- if section.settings.image != blank -%}
                        <img
                        src="{{ section.settings.image | image_url: width: 1920 }}"
                        loading="lazy"
                        class="media-parallax-section__image"
                        alt="{{ section.settings.image.alt | escape }}"
                        width="{{ section.settings.image.width }}"
                        height="{{ section.settings.image.height }}"
                        >
                    {%- else -%}
                        {{ 'hero-apparel-1' | placeholder_svg_tag: 'media-parallax-section__image' }}
                    {%- endif -%}
                </picture>
            {%- elsif section.settings.media_type == 'video' and section.settings.video_url != blank -%}
                <video
                class="media-parallax-section__video"
                src="{{ section.settings.video_url }}"
                autoplay
                loop
                muted
                playsinline
                ></video>
            {%- endif -%}
        </div>

        <div class="media-parallax-section__content page-width">
            {%- if section.settings.heading != blank -%}
                <h2 class="media-parallax-section__heading">{{ section.settings.heading }}</h2>
            {%- endif -%}
            {%- if section.settings.text != blank -%}
                <div class="media-parallax-section__text">{{ section.settings.text | richtext -}}</div>
            {%- endif -%}
            {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
                {% render 'button-custom', label: section.settings.button_label, url: section.settings.button_link %}
            {%- endif -%}
        </div>
    </div>
</media-parallax-section>

{%- javascript -%}
    class MediaParallaxSection extends HTMLElement {
        constructor() {
        super();
        }
    }
    customElements.define('media-parallax-section', MediaParallaxSection);
{%- endjavascript -%}

{% schema %}
    {
        "name": "【カスタム】メディアパララックス",
        "class": "shopify-section--media-parallax",
        "settings": [
            {
                "type": "select",
                "id": "media_type",
                "label": "背景メディアの種類",
                "options": [
                    { "value": "image", "label": "画像" },
                    { "value": "video", "label": "ビデオ" }
                ],
                "default": "image"
            },
            {
                "type": "image_picker",
                "id": "image_mobile",
                "label": "背景画像（スマホ）",
                "info": "設定しない場合はPCと同じ画像が表示されます。"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "背景画像",
                "info": "メディアの種類が「画像」の場合に表示されます。"
            },
            {
                "type": "url",
                "id": "video_url",
                "label": "背景ビデオのURL",
                "info": "メディアの種類が「ビデオ」の場合に表示されます（.mp4形式）。Shopifyの「設定 > ファイル」からアップロードできます。"
            },
            {
                "type": "range",
                "id": "section_height",
                "min": 30,
                "max": 100,
                "step": 5,
                "unit": "vh",
                "label": "セクションの高さ",
                "default": 70
            },
            {
                "type": "range",
                "id": "section_height_mobile",
                "min": 30,
                "max": 100,
                "step": 5,
                "unit": "vh",
                "label": "セクションの高さ（スマホ）",
                "default": 80
            },
            {
                "type": "header",
                "content": "背景オーバーレイ"
            },
            {
                "type": "color",
                "id": "overlay_color",
                "label": "オーバーレイの色",
                "default": "#000000"
            },
            {
                "type": "range",
                "id": "overlay_opacity",
                "min": 0,
                "max": 100,
                "step": 5,
                "unit": "%",
                "label": "オーバーレイの不透明度",
                "default": 30
            },
            {
                "type": "header",
                "content": "オーバーレイコンテンツ"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "見出し",
                "default": "Parallax Section"
            },
            {
                "type": "richtext",
                "id": "text",
                "label": "テキスト",
                "default": "<p>背景の画像（またはビデオ）がスクロールに合わせて動きます。</p>"
            },
            {
                "type": "text",
                "id": "button_label",
                "label": "ボタンのラベル"
            },
            {
                "type": "url",
                "id": "button_link",
                "label": "ボタンのリンク"
            }
        ],
        "presets": [
            {
                "name": "【カスタム】メディアパララックス"
            }
        ]
    }
{% endschema %}