{%- style -%}
    #shopify-section-{{ section.id }} .featured-grid {
        --padding-top: {{ section.settings.padding_top }}px;
        --padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    @media screen and (max-width: 749px) {
        #shopify-section-{{ section.id }} .featured-grid {
        /* スマホではPCの半分に設定 */
        --padding-top: {{ section.settings.padding_top | times: 0.5 | round }}px;
        --padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round }}px;
        }
    }
{%- endstyle -%}
<div class="featured-grid">
    {%- render 'section-title',
        heading: section.settings.heading,
        subheading: section.settings.subheading,
        text_alignment: section.settings.title_text_alignment,
        padding_top: section.settings.title_padding_top,
        padding_bottom: section.settings.title_padding_bottom
    -%}

    <div class="featured-grid__grid">
        {%- for block in section.blocks -%}
            <a href="{{ block.settings.link }}" class="featured-grid__item">
                <div class="featured-grid__image-wrapper">
                    {%- if block.settings.image != blank -%}
                        {{ block.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy' }}
                    {%- else -%}
                        <div class="shopify-section-placeholder">
                            {{ 'lifestyle-1' | placeholder_svg_tag: 'shopify-section-placeholder__image' }}
                        </div>
                    {%- endif -%}
                </div>
                <div class="featured-grid__content featured-grid__content--{{ block.settings.text_position }}">
                    <div class="featured-grid__content-txt">
                        {%- if block.settings.pre_heading != blank -%}
                            <p class="featured-grid__pre-heading">{{ block.settings.pre_heading }}</p>
                        {%- endif -%}
                        {%- if block.settings.heading != blank -%}
                            <h3 class="featured-grid__item-heading">{{ block.settings.heading }}</h3>
                        {%- endif -%}
                    </div>
                    <div class="featured-grid__content-arrow"></div>
                </div>
            </a>
        {%- endfor -%}
    </div>
</div>

{% schema %}
{
    "name": "【カスタム】特集グリッド",
    "class": "shopify-section--featured-grid",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "見出し",
            "default": "当店のイチオシ"
        },
        {
            "type": "text",
            "id": "subheading",
            "label": "背景のテキスト",
            "default": "RECOMMEND"
        },
        {
            "type": "header",
            "content": "セクションの余白"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 200,
            "step": 10,
            "unit": "px",
            "label": "上の余白（PC）",
            "default": 50
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 200,
            "step": 10,
            "unit": "px",
            "label": "下の余白（PC）",
            "default": 50
        },
        {
            "type": "header",
            "content": "タイトルの余白"
        },
        {
            "type": "select",
            "id": "title_text_alignment",
            "label": "タイトルの配置",
            "options": [
                { "value": "center", "label": "中央揃え" },
                { "value": "left", "label": "左揃え" }
            ],
            "default": "center"
        },
        {
            "type": "range",
            "id": "title_padding_top",
            "min": 0,
            "max": 200,
            "step": 10,
            "unit": "px",
            "label": "上の余白（PC）",
            "default": 30
        },
        {
            "type": "range",
            "id": "title_padding_bottom",
            "min": 0,
            "max": 200,
            "step": 10,
            "unit": "px",
            "label": "下の余白（PC）",
            "default": 30
        }
    ],
    "blocks": [
        {
            "type": "featured_item",
            "name": "特集アイテム",
            "limit": 4,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "画像"
                },
                {
                    "type": "text",
                    "id": "pre_heading",
                    "label": "小見出し"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "見出し"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "リンク先"
                },
                {
                    "type": "select",
                    "id": "text_position",
                    "label": "テキストの表示位置",
                    "options": [
                        { "value": "top-left", "label": "左上" },
                        { "value": "bottom-left", "label": "左下" }
                    ],
                    "default": "bottom-left"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "【カスタム】特集グリッド",
            "blocks": [
                { "type": "featured_item" },
                { "type": "featured_item" },
                { "type": "featured_item" }
            ]
        }
    ]
}
{% endschema %}