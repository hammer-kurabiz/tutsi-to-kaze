<div class="featured-grid">
    {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
        <div class="featured-grid__title-wrapper">
            {%- if section.settings.heading != blank -%}
                <h2 class="featured-grid__heading">{{ section.settings.heading }}</h2>
            {%- endif -%}
            {%- if section.settings.subheading != blank -%}
                <p class="featured-grid__subheading font-english">{{ section.settings.subheading }}</p>
            {%- endif -%}
        </div>
    {%- endif -%}

    <div class="featured-grid__grid">
        {%- for block in section.blocks -%}
            <a href="{{ block.settings.link }}" class="featured-grid__item">
                <div class="featured-grid__image-wrapper">
                    {%- if block.settings.image != blank -%}
                        {{ block.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy' }}
                    {%- else -%}
                        <div class="shopify-section-placeholder">
                            {{ 'lifestyle-1' | placeholder_svg_tag: 'shopify-section-placeholder__image' }}
                        </div>
                    {%- endif -%}
                </div>
                <div class="featured-grid__content featured-grid__content--{{ block.settings.text_position }}">
                    {%- if block.settings.pre_heading != blank -%}
                        <p class="featured-grid__pre-heading">{{ block.settings.pre_heading }}</p>
                    {%- endif -%}
                    {%- if block.settings.heading != blank -%}
                        <h3 class="featured-grid__item-heading">{{ block.settings.heading }}</h3>
                    {%- endif -%}
                </div>
            </a>
        {%- endfor -%}
    </div>
</div>

{% schema %}
{
    "name": "【カスタム】特集グリッド",
    "class": "shopify-section--featured-grid",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "見出し",
            "default": "当店のイチオシ"
        },
        {
            "type": "text",
            "id": "subheading",
            "label": "背景のテキスト",
            "default": "RECOMMEND"
        }
    ],
    "blocks": [
        {
            "type": "featured_item",
            "name": "特集アイテム",
            "limit": 4,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "画像"
                },
                {
                    "type": "text",
                    "id": "pre_heading",
                    "label": "小見出し",
                    "default": "世界でたったひとつの花束"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "見出し",
                    "default": "フローリストおまかせスワッグ"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "リンク先"
                },
                {
                    "type": "select",
                    "id": "text_position",
                    "label": "テキストの表示位置",
                    "options": [
                        { "value": "top-left", "label": "左上" },
                        { "value": "top-center", "label": "上中央" },
                        { "value": "top-right", "label": "右上" },
                        { "value": "center-left", "label": "中央左" },
                        { "value": "center-center", "label": "中央" },
                        { "value": "center-right", "label": "中央右" },
                        { "value": "bottom-left", "label": "左下" },
                        { "value": "bottom-center", "label": "下中央" },
                        { "value": "bottom-right", "label": "右下" }
                    ],
                    "default": "bottom-left"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "【カスタム】特集グリッド",
            "blocks": [
                { "type": "featured_item" },
                { "type": "featured_item" },
                { "type": "featured_item" },
                { "type": "featured_item" }
            ]
        }
    ]
}
{% endschema %}